<div class="titulo-pagina">
    <span>Registrarse</span>
</div>


<form class="form-style" method="POST" action='@Url.Action("RegistrarUsuario", "Home")'>

    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" name="nombre" required>
    </div>

    <div class="form-group">
        <label for="apellido">Apellido</label>
        <input type="text" class="form-control" name="apellido" required>
    </div>

      <div class="form-group">
        <label for="mail">Mail</label>
        <input type="email" class="form-control" name="mail" placeholder="name@example.com" required>
    </div>

     <div class="form-group">
        <label for="contraseña">Constraseña</label>
        <input type="password" class="form-control" name="contraseña" required>
    </div>
    
    <button type="submit" class="btn btn-dark">Registrarme</button>

</form>